---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="wrapper">
      <div class="info">
        <h1>Max Latnikov</h1>
		<p class="instructions">
			Hexlet College teacher
			<br>
			JS-developer
		</p>
      </div>
	  <div class="userpic">
		<img src="https://pbs.twimg.com/profile_images/1556527509872807936/Y91M3uto_400x400.jpg" alt="me" />
	  </div>
    </div>
	<ul role="list" class="link-card-grid">
		<Card
				href="https://www.notion.so/latnikou/JavaScript-2757dd3f667c4633aa880728103ca3c4"
				title="For HR"
				body="Take a look at my resume"
			/>
			<Card
				href="#"
				title="Links"
				body="Social media stuff"
			/>
			<Card
				href="#"
				title="Portfolio"
				body="I build stuff"
			/>
	</ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0;
	line-height: 3rem;
    text-align: left;
	color: rgb(124, 58, 237);
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }

  .wrapper {
    display: flex;
	justify-content: space-between;
	gap: 3rem;
  }

  
  .userpic img {
	max-width: 200px;
	border-radius: 0.4rem;
  }

  @media only screen and (max-width: 600px) {
	img {
		display: none;
	}
  }
</style>
